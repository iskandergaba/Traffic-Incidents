<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gaba.alex.trafficincidents">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--This meta-data tag is required to use Google Play Services.-->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAnm2Qy2KOw8lOef4vXc9wBKHjv17yU1SA" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!--suppress AndroidDomInspection -->
        <provider
            android:authorities="com.gaba.alex.traffic_incidents.Data.IncidentsProvider"
            android:name="com.gaba.alex.trafficincidents.Data.Provider.IncidentsProvider"
            android:exported="false"/>


        <activity
            android:name=".paid.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>