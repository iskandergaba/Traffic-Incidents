<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/incident_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type of the incident"
                android:textSize="18dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"/>

            <TextView
                android:id="@+id/incident_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Incident Description"
                android:textSize="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"/>
            <TextView
                android:id="@+id/incident_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End date"
                android:textSize="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"/>

            <TextView
                android:id="@+id/incident_road_closed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Road Closed:"
                android:textSize="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"/>

            <TextView
                android:id="@+id/incident_severity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Severity"
                android:textSize="16dp"
                android:padding="8dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp">
                <ImageView
                    android:id="@+id/share_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_share"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:tint="@color/colorAccent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:contentDescription="View on Map"
                    android:padding="6dp"/>

                <ImageView
                    android:id="@+id/show_on_map_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/ic_map"
                    android:tint="@color/colorAccent"
                    android:layout_toLeftOf="@id/share_button"
                    android:layout_toStartOf="@id/share_button"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="Share"
                    android:padding="6dp"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    
    <Space
        android:layout_width="match_parent"
        android:layout_height="4dp" />
    
</LinearLayout>