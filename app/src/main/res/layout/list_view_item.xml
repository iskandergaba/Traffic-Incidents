<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_vertical_margin"
    android:layout_marginStart="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/incident_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type of the incident"
            android:textSize="18dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"/>

        <TextView
            android:id="@+id/incident_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incident Description"
            android:textSize="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"/>
        <TextView
            android:id="@+id/incident_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End date"
            android:textSize="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"/>

        <TextView
            android:id="@+id/incident_road_closed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Road Closed:"
            android:textSize="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"/>

        <TextView
            android:id="@+id/incident_severity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Severity"
            android:textSize="16dp"
            android:padding="8dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <ImageView
                android:id="@+id/share_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_share"
                android:tint="@color/colorAccent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:contentDescription="View on Map"
                android:padding="4dp"/>

            <ImageView
                android:id="@+id/show_on_map_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_dialog_map"
                android:tint="@color/colorAccent"
                android:layout_toLeftOf="@id/share_button"
                android:layout_toStartOf="@id/share_button"
                android:contentDescription="Share"
                android:padding="4dp"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>